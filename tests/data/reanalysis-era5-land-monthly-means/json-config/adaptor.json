{
  "format_conversion": {
    "netcdf.zip": {
      "always_zip": [
        true
      ],
      "system_call": [
        "/opt/ecmwf/eccodes/bin/grib_to_netcdf",
        "-S",
        "param",
        "-o",
        "{{outfile}}",
        "{{infile}}"
      ],
      "zip_compression_kwargs": {
        "compression": "ZIP_DEFLATED"
      }
    },
    "netcdf4": {
      "system_call": [
        "cfgrib",
        "to_netcdf",
        "-o",
        "{{outfile}}",
        "{{infile}}"
      ]
    },
    "netcdf_cdm": {
      "split_on": [
        "origin",
        "type",
        "dataset"
      ],
      "system_call": [
        "cdscdm-translate",
        "-o",
        "{{outfile}}",
        "--product",
        "{{product}}",
        "--merge_datasets",
        "true",
        "{{infile}}"
      ]
    }
  }
}